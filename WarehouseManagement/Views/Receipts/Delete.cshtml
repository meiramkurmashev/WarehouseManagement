@model WarehouseManagement.Models.Receipt

@{
    ViewData["Title"] = "Удаление поступления";
}

<h1>Удаление поступления</h1>

<h3>Вы уверены, что хотите деактивировать это поступление?</h3>
<div>
    <h4>Поступление</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>

    <h4>Позиции</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Ресурс</th>
                <th>Единица измерения</th>
                <th>Количество</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Resource?.Name</td>
                    <td>@item.Unit?.Name</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Деактивировать" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
        </div>
    </form>
</div>