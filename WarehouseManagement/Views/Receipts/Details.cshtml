@model WarehouseManagement.Models.Receipt

@{
    ViewData["Title"] = "Детали документа";
}

<h1>Детали документа</h1>

<div>
    <h4>Поступление</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
</div>

<h4>Ресурсы</h4>
<table class="table">
    <thead>
        <tr>
            <th>Ресурс</th>
            <th>Единица измерения</th>
            <th>Количество</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Resource.Name)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Unit.Name)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>