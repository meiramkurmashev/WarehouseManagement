@model IEnumerable<Resource>

<h2>Ресурсы</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить ресурс</a>
    <a asp-action="Index" asp-route-showInactive="true" class="btn btn-secondary">Показать архив</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.IsActive ? "Активен" : "В архиве")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Изменить</a>
                    @if (item.IsActive)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">В архив</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>